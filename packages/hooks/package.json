{
  "name": "@essex/hooks",
  "version": "4.0.21",
  "description": "A set of hooks for use with react",
  "type": "module",
  "main": "src/index.ts",
  "publishConfig": {
    "main": "dist/index.js",
    "types": "dist/index.d.ts"
  },
  "sideEffects": false,
  "repository": "https://github.com/microsoft/essex-toolkit",
  "author": "David Tittsworth <datittsw@microsoft.com>",
  "license": "MIT",
  "scripts": {
    "build": "essex build --skipExportCheck --docs",
    "clean": "essex clean docs",
    "test": "NODE_OPTIONS=--experimental-vm-modules yarn node $(yarn bin jest) --runInBand --coverage",
    "fix": "essex fix --formatter none",
    "check": "essex check --formatter none",
    "check-deps": "essex check-deps",
    "release": "yarn npm publish --tolerate-republish --access public"
  },
  "dependencies": {
    "@essex/toolbox": "workspace:^",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@essex/jest-config": "^22.0.0",
    "@essex/scripts": "^25.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.4",
    "@types/lodash-es": "^4.17.8",
    "@types/node": "^20.5.7",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "@types/node": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "react": ">= 18",
    "react-dom": "^18.2.0"
  },
  "peerDependenciesMeta": {
    "@type/node": {
      "optional": true
    },
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    },
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": true
    }
  }
}
